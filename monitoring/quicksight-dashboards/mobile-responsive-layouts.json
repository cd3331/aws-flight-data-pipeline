  "offlineCapabilities": [
    {
      "capabilityId": "offline-data-cache",
      "description": "Cache recent data for offline viewing",
      "configuration": {
        "cacheSize": "50MB",
        "retentionPeriod": "24_HOURS",
        "syncStrategy": "DIFFERENTIAL_SYNC",
        "priorityData": [
          "LAST_1_HOUR_FLIGHTS",
          "CRITICAL_ALERTS",
          "KPI_SUMMARIES"
        ]
      }
    },
    {
      "capabilityId": "offline-dashboard-access",
      "description": "Limited dashboard functionality when offline",
      "features": [
        "VIEW_CACHED_VISUALIZATIONS",
        "BASIC_FILTERING",
        "EXPORT_TO_PDF",
        "BOOKMARK_VIEWS"
      ],
      "limitations": [
        "NO_REAL_TIME_UPDATES",
        "LIMITED_DATE_RANGES",
        "REDUCED_INTERACTIVITY"
      ]
    }
  ]
