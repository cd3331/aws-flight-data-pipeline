  "performanceOptimizations": [
    {
      "optimizationId": "mobile-data-reduction",
      "description": "Reduce data volume for mobile devices",
      "strategies": [
        {
          "strategy": "DATA_SAMPLING",
          "configuration": {
            "mobile": {
              "maxRows": 1000,
              "samplingMethod": "SYSTEMATIC"
            },
            "tablet": {
              "maxRows": 5000,
              "samplingMethod": "STRATIFIED"
            }
          }
        },
        {
          "strategy": "FIELD_REDUCTION",
          "configuration": {
            "mobile": {
              "essentialFieldsOnly": true,
              "maxColumns": 10
            },
            "tablet": {
              "moderateFieldSet": true,
              "maxColumns": 20
            }
          }
        }
      ]
    },
    {
      "optimizationId": "lazy-loading",
      "description": "Load visualizations on-demand based on viewport",
      "configuration": {
        "enableLazyLoading": true,
        "loadingThreshold": "50px",
        "placeholderType": "SKELETON",
        "priorityLoading": ["KPI", "ALERTS", "CRITICAL_CHARTS"]
      }
    },
    {
      "optimizationId": "caching-strategy",
      "description": "Aggressive caching for mobile performance",
      "configuration": {
        "mobile": {
          "cacheTimeout": "5_MINUTES",
          "aggressiveCaching": true,
          "offlineSupport": true
        },
        "tablet": {
          "cacheTimeout": "2_MINUTES",
          "standardCaching": true,
          "offlineSupport": false
        }
      }
    }
  ],
