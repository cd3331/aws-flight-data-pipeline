  "touchInteractions": [
    {
      "interactionId": "swipe-navigation",
      "description": "Swipe left/right to navigate between dashboard sheets",
      "gestures": [
        {
          "gesture": "SWIPE_LEFT",
          "action": "NEXT_SHEET",
          "sensitivity": "MEDIUM"
        },
        {
          "gesture": "SWIPE_RIGHT", 
          "action": "PREVIOUS_SHEET",
          "sensitivity": "MEDIUM"
        }
      ],
      "applicableBreakpoints": ["MOBILE", "TABLET"]
    },
    {
      "interactionId": "pinch-zoom-charts",
      "description": "Pinch to zoom on charts and maps",
      "gestures": [
        {
          "gesture": "PINCH_IN",
          "action": "ZOOM_OUT",
          "minScale": 0.5,
          "sensitivity": "HIGH"
        },
        {
          "gesture": "PINCH_OUT",
          "action": "ZOOM_IN",
          "maxScale": 3.0,
          "sensitivity": "HIGH"
        }
      ],
      "applicableVisualTypes": ["GEOSPATIAL_MAP", "SCATTER_PLOT", "LINE_CHART"]
    },
    {
