  "responsiveComponents": [
    {
      "componentId": "adaptive-navigation",
      "componentType": "NAVIGATION_BAR",
      "description": "Adaptive navigation that changes based on screen size",
      "configurations": [
        {
          "breakpoint": "MOBILE",
          "layout": "HAMBURGER_MENU",
          "options": {
            "collapsible": true,
            "iconOnly": true,
            "position": "TOP"
          }
        },
        {
          "breakpoint": "TABLET",
          "layout": "HORIZONTAL_TABS",
          "options": {
            "scrollable": true,
            "showLabels": true,
            "position": "TOP"
          }
        },
        {
          "breakpoint": "DESKTOP",
          "layout": "SIDEBAR",
          "options": {
            "expandable": true,
            "showLabels": true,
            "position": "LEFT"
          }
        }
      ]
    },
    {
      "componentId": "adaptive-filters",
      "componentType": "FILTER_PANEL",
      "description": "Responsive filter interface that adapts to screen constraints",
      "configurations": [
        {
          "breakpoint": "MOBILE",
          "layout": "MODAL_OVERLAY",
          "options": {
            "triggerButton": "üîç Filters",
            "fullScreen": true,
            "essentialFiltersOnly": true,
            "maxFilters": 5
          }
        },
        {
          "breakpoint": "TABLET",
          "layout": "COLLAPSIBLE_PANEL",
          "options": {
            "position": "TOP",
            "defaultExpanded": false,
            "horizontalLayout": true
          }
        },
        {
          "breakpoint": "DESKTOP",
          "layout": "SIDEBAR_PANEL",
          "options": {
            "position": "LEFT",
            "defaultExpanded": true,
            "verticalLayout": true
          }
        }
      ]
    },
    {
